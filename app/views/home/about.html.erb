  <div class="side user">
	<div class="profile-box">
    <div class="profile TopLeft sp-none">
      <p>Profile</p>
    </div>
    <div class="profile TopRight">
      <%= image_tag(@user.user_image) %>
    </div>
    <div class="profile BottomLeft sp-none">
      <%= image_tag(@user.user_image) %>
    </div>
    <div class="profile BottomRight">
      <p><%= @user.nickname %></p>
    </div>
  </div>

