<h1>Trips#index</h1>

			<p>検索</p>
			<%= form_tag(trips_path,:method => 'get') do %>
			  <%= text_field_tag :search %>
			  <%= submit_tag 'Search', :trip_title => nil %>
			<% end %>

			<ul><% @search_trips.each do |trip| %>
			  <li>
				    "Trip Title"<br>
				    <%= trip.trip_title %><br>
			  </li>
			  <li>
				    "Trip Details"<br>
				    <%= trip.trip_details %><br>
			  </li>
			  <% end %>
			</ul>


			<% @trips.each do |trip| %>
				    "Trip Title"<br>
				    <%= trip.trip_title %><br>
				    "Trip Details"<br>
				    <%= trip.trip_details %><br>
					<%= link_to "Show", trip_path(trip) %><br>
					<%= link_to "Edit", edit_trip_path(trip) %><br>
			<% end %>