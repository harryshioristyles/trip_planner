<h1>Trips#index</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
		<div class="search-bar">
		<p>検索</p>
			<%= form_tag(trips_path,:method => 'get') do %>
			  <%= text_field_tag :search %>
			  <%= submit_tag 'Search', :trip_title => nil %>
			<% end %>
		</div>

		<% @search_trips.each do |trip| %>
	    <div class="box">
		<p><%= trip.trip_image.attached? ? image_tag(trip.trip_image , :size => '200x200') : image_tag("noimage/no_image.jpg") %>
		</p>
			<div class="box-text">
			<!-- 以下、likes -->
			<% if trip.favorited_by?(current_user) %>
			  <p>
			    <%= link_to trip_favorite_trips_path(trip), method: :delete do %>
			      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
			      <%= trip.favorite_trips.count %> like
			    <% end %>
			  </p>
			<% else %>
			  <p>
			    <%= link_to trip_favorite_trips_path(trip), method: :post do %>
			      <i class="fa fa-heart-o" aria-hidden="true"></i>
			      <%= trip.favorite_trips.count %> like
			    <% end %>

			  </p>
			<% end %>
			<!-- 以上、likes -->
			        <h3><%= trip.trip_title %></h3>
				    <h5><%= trip.trip_details %></h5>
					<p class="index-user">by.<%= trip.user.nickname %></p>
			</div>
        </div>
		<% end %>
	</div>
  </div>
</div>