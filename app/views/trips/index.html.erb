<h1>Trips#index</h1>
<div class="container">
	<div class="search-bar">
	<p>検索</p>
		<%= form_tag(trips_path,:method => 'get') do %>
		  <%= text_field_tag :search %>
		  <%= submit_tag 'Search', :trip_title => nil %>
		<% end %>
	</div>

	    <div class="box">
		<% @search_trips.each do |trip| %>
			<%= render 'trips/small_box', trip: trip %>
		<% end %>
		</div>
	    <div class="lead"></div>
	    	    <% if @previous_page >= 0  %>
	         		<%= link_to "Pre", "/trips/#{@previous_page}/", class: "btn-flat-border" %>
	         	<% end %>
	         	<%= link_to "NEXT", "/trips/#{@next_page}/", class: "btn-flat-border" %>
	    </div>

</div>