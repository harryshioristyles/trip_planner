<h1>Trips#show</h1>
	<div>
		Trip title:<%= @trip.trip_title %><br>
		Trip details:<%= @trip.trip_details %><br>
		<%= link_to "Edit", edit_trip_path(@trip) %><br>
		<%= link_to "Delete", trip_path(@trip), method: :delete, "data-confirm" => "Are you sure?" %><br>

			<% @trip.lists.each do |list| %>
					Day.<%= list.day_index %>
					date:<%= list.date %><br>
					begin:<%= list.begin %>
					end:<%= list.end %><br>
					list_title:<%= list.list_title %><br>
					list_details:<%= list.list_details %><br>
					City:<%= list.city.city_name %><br>
					Activity:<%= list.activity.activity_name %><br>
					<%= link_to "Edit", edit_list_path(list) %><br>
					<%= link_to "Delete", list_path(list), method: :delete, "data-confirm" => "Are you sure?" %><br>
			<% end %>
    </div>