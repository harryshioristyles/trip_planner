<h1>Lists#new</h1>
<p>Find me in app/views/lists/new.html.erb</p>
	<div>
		Trip title:<%= @trip.trip_title %><br>
		Trip details:<%= @trip.trip_details %><br>
		<%= link_to "Edit", edit_trip_path(@trip) %><br>

			<% @trip.lists.each do |list| %>
					Day.<%= list.day_index %>
					date:<%= list.date %><br>
					begin:<%= list.begin %>
					end:<%= list.end %><br>
					list_title:<%= list.list_title %><br>
					list_details:<%= list.list_details %><br>
					City:<%= list.city.city_name %><br>
					Activity:<%= list.activity.activity_name %><br>
					<%= link_to "Edit", edit_list_path(list) %><br>
					<%= link_to "Delete", list_path(list), method: :delete, "data-confirm" => "Are you sure?" %><br>
			<% end %>
    </div>
	<div>
		<%= form_for @list do |f| %>
			<div class="field">
			    <%= f.label :day_index, "Day" %>
			    <%= f.text_field :day_index %>
            </div>
			<div class="field">
			    <%= f.label :date, "Date" %>
			    <%= f.date_field :date %>
            </div>
			<div class="field">
			    <%= f.label :begin, "Start from" %>
			    <%= f.time_field :begin %>
            </div>
			<div class="field">
			    <%= f.label :end, "finish by" %>
			    <%= f.time_field :end %>
            </div>
			<div class="field">
			    <%= f.label :list_title, "List Title" %>
			    <%= f.text_field :list_title %>
            </div>
			<div class="field">
			    <%= f.label :list_details, "List Details" %>
			    <%= f.text_area :list_details %>
            </div>
			<div class="field">
			    <%= f.label :city_id, "City" %>
			    <%= f.collection_select :city_id, City.all, :id, :city_name %>
            </div>
			<div class="field">
			    <%= f.label :activity_id, "Activity" %>
			    <%= f.collection_select :activity_id, Activity.all, :id, :activity_name %>
            </div>
                <%= f.hidden_field :trip_id, value: @trip.id %>
            <%= f.submit :CREATEandNew %>
        <% end %>
    </div>
