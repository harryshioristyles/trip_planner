	<div>
		<%= form_for @list do |f| %>
			<div class="field">
			    <%= f.label :day_index, "Day" %>
			    <%= f.text_field :day_index %>
            </div>
			<div class="field">
			    <%= f.label :date, "Date" %>
			    <%= f.date_field :date %>
            </div>
			<div class="field">
			    <%= f.label :begin, "Start from" %>
			    <%= f.time_field :begin %>
            </div>
			<div class="field">
			    <%= f.label :end, "finish by" %>
			    <%= f.time_field :end %>
            </div>
			<div class="field">
			    <%= f.label :list_title, "List Title" %>
			    <%= f.text_field :list_title %>
            </div>
			<div class="field">
			    <%= f.label :list_details, "List Details" %>
			    <%= f.text_area :list_details %>
            </div>
			<div class="field">
			    <%= f.label :city_id, "City" %>
			    <%= f.collection_select :city_id, City.all, :id, :city_name %>
            </div>
			<div class="field">
			    <%= f.label :city_id, "City" %>
			    <%= f.collection_select :activity_id, Activity.all, :id, :activity_name %>
            </div>
            <%= f.submit :CREATE %>
        <% end %>
    </div>
