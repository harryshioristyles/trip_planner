<div class="flexbox">
  <div class="side user">
	<%= render 'users/profile', user: @user %>
  </div>

  <div class="main">
  		<div class="box">
			<% @trips.each do |trip| %>
				<%= render 'trips/small_box', trip: trip %>
			<% end %>
		</div>
		<div>
            <%= link_to plan_path(@previous_page, user_id: @user), class: "btn-flat-logo-navy" do %>
          		<i class="fas fa-angle-double-left"> Previous</i>
        	<% end %>
            <%= link_to plan_path(@next_page, user_id: @user), class: "btn-flat-logo-navy" do %>
          		 Next<i class="fas fa-angle-double-right"></i>
        	<% end %>
		</div>
  </div>
</div>