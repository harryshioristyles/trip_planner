<div class="flexbox">
  <div class="side-trip">
	<%= render 'admin/trips/side_trip_admin', trip: @trip, days: @days %>
  </div>
  <div class="main">
  	<ul class="form-style-1">
	  <%= form_for @list, :url => { :controller => :trips, :action => :list_update } do |f| %>
	    <%= render 'lists/form_list', f: f %>
	    <li>
    	  <%= f.hidden_field :trip_id, value: @trip.id %>
	      <%= f.submit :"Update!" %>
      </li>
    <% end %>
	  </ul>
  </div>
</div>