<h1>Admin::Users#edit</h1>
<p>Find me in app/views/admin/users/edit.html.erb</p>

    <%= form_for @user, url: admin_user_path(@user) do |f| %>
		<div>
		    <h4>Name</h4>
		    <%= f.text_field :nickname, class: "name" %>
		    <h4>Introduction</h4>
		    <%= f.text_area :introduction, class: "introduction" %>
		    <%= image_tag(@user.user_image) if @user.user_image.attached? %>
		    <%= f.file_field :user_image %><br>
		</div>
        <%= f.submit 'Update' %></br>
        <%= link_to admin_user_path(@user), method: :delete, "data-confirm" => "Are you sure?", class:"btn btn-danger" do %>DELETE<% end %>
    <% end %>
    <%= link_to "Back", admin_users_path %>