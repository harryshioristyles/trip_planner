<div class="panel panel-default">
	<div class="panel-heading">
      <h3 class="panel-title">User Infomation</h3>
    </div>
	    <table class="table">
	      <thead>
		      <tr>
		      	<th></th>
				<th> Nickname</th>
				<th> Mail</th>
				<th> Introduction</th>
				<th></th>
			  </tr>
		  </thead>
		  <tbody>
		  	<% users.each do |user| %>
			  <tr>
				<td><%= user.user_image.attached? ? image_tag(user.user_image, :size => '50x50') : image_tag("no_user_image.jpg", :size => '50x50') %></td>
				<td><%= link_to admin_trip_path(0, user_id: user.id), class: "btn-flat-logo" do %>
						<%= user.nickname %>
					<% end %>
				</td>
				<td><%= user.email %></td>
				<td><%= user.introduction %></td>
				<td>
					<%= link_to edit_admin_user_path(user.id), class: "btn-flat-logo-green" do %>
				      <i class="fas fa-user-edit"> Edit</i>
				    <% end %>
				</td>
			  </tr>
			<% end %>
		  </tbody>
		</table>
</div>