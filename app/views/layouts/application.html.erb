<!DOCTYPE html>
<html>
  <head>
    <title>Travel Planner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <header class="navbar navbar-inverse">
          <div class="container">
            <nav>
              <% if admin_signed_in? %>
                <nav class="nav navbar-nav navbar-left">
                  <span>Travel Planner</span>
                </nav>
                <ul class="nav navbar-nav navbar-right">
                  <li role="presentation">
                    <%= link_to destroy_admin_session_path , method: :delete, class: "glyphicon glyphicon-log-out logout" do %>
                      <span aria-hidden="true"> ログアウト</span>
                    <% end %>
                  </li>
                </ul>
              <% elsif user_signed_in? %>
                <nav class="nav navbar-nav navbar-left">
                  <span>Travel Planner</span>
                </nav>
                <ul class="nav navbar-nav navbar-right">
                  <li role="presentation">
                    <%= link_to user_path(current_user.id), class: "glyphicon glyphicon-home home" do %>
                      <span aria-hidden="true"> マイページ</span>
                    <% end %>
                  </li>
                  <li role="presentation">
                    <%= link_to carts_path, class: "glyphicon glyphicon-shopping-cart" do %>
                      <span aria-hidden="true"> カート</span>
                    <% end %>
                  </li>
                  <li role="presentation">
                    <%= link_to destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" do %>
                      <span aria-hidden="true"> ログアウト</span>
                    <% end %>
                  </li>
                </ul>
              <% else %>
                <nav class="nav navbar-nav navbar-left">
                  <span>Travel Planner</span>
                </nav>
                <ul class="nav navbar-nav navbar-right">
                  <li role="presentation">
                    <%= link_to new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" do %>
                      <span aria-hidden="true"> ログイン</span>
                    <% end %>
                  </li>
                  <li role="presentation">
                    <%= link_to new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" do %>
                      <span aria-hidden="true"> 新規登録</span>
                    <% end %>
                  </li>
                </ul>
              <% end %>
            </nav>
          </div>
        </header>

        <main>
          <% if flash[:notice] %>
            <p id=notice><%= flash[:notice] %></p>
          <% end %>

          <%= yield %>
        </main>

        <footer>
          <p class="copyright">©︎ Travel Planner </p>
        </footer>

  </body>
</html>
